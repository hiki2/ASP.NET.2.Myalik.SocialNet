@model IEnumerable<ASP.NET._2.Myalik.SocialNet.Models.FriendViewModel>

<div class="window align-center" style="width: 248px; height: 200px;">
    <div class="window-caption bg-lightGray align-center">
        <span class="window-caption-title">
            <a style="color:white" href="../Friends/@ViewData["ProfileId"]">@Model.Count(e => e.Confirmed) Friends</a>
        </span>
    </div>
    <div class="window-content">
        @{
            foreach (var friend in Model)
            {
                if (friend.Confirmed)
                {
                    var image = friend.Profile.Avatar == null ? "/Resources/no-image-sqr.png" : $"data:image/jpeg;base64,{Convert.ToBase64String(friend.Profile.Avatar)}";
                    <a href="../Home/@friend.Profile.id">
                        <div class="tile-small" data-role="tile">
                            <div class="tile-content slide-up">
                                <div class="slide">
                                    <div class="image-container image-format-square">
                                        <div class="frame">
                                            <img style="width: 100%; height: 100%; border-radius: 0px; background-size: cover; background-repeat: no-repeat;" src="@image" alt=""/>
                                        </div>
                                    </div>
                                </div>
                                <div class="slide-over op-gray text-small padding10">
                                    <span style="color: rgb(230, 220, 220);">@friend.Profile.Name @friend.Profile.LastName</span>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
            if (!(Model != null && Model.Any(e=> e.Confirmed)))
            {
                <br><br><br><span class="mif-water fg-blue mif-4x"></span>
            }
        }
    </div>
</div>

