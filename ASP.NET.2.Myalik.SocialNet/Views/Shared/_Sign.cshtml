<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        .sign-form {
            background-color: green;
            width: 25rem;
            position: fixed;
            top: 30%;
            margin-top: -9.375rem;
            left: 50%;
            margin-left: -12.5rem;
            background-color: #ffffff;
            opacity: 0;
            -webkit-transform: scale(.8);
            transform: scale(.8);
        }

        .input-validation-error {
            background-color: #f5a39d;
        }
    </style>
    @Styles.Render("~/Content/mentro-ui")
    @Scripts.Render("~/bundles/metro-ui")
</head>
<body class="bg-lightTeal">
    <div id="ParentDiv" class="sign-form padding20 block-shadow" style="opacity: 1; transform: scale(1); transition: 0.5s;">
        @RenderBody()
    </div>
</body>
</html>
