@model IEnumerable<ASP.NET._2.Myalik.SocialNet.Models.ProfileViewModel>
@foreach (var profile in Model)
{
    var image = profile.Avatar == null ? "/Resources/no-image-sqr.png" : $"data:image/jpeg;base64,{Convert.ToBase64String(profile.Avatar)}";
    <div class="row cells5 bg-lighterGray" style="margin-top: 20px">
        <div class="cell">
            <div class="image-container image-format-square" style="width: 100%;">
                <div class="frame">
                    <img style="width: 100%; height: 128px; border-radius: 0px; background-size: cover; background-repeat: no-repeat;" src="@image" alt="" />
                </div>
            </div>
        </div>
        <div class="cell colspan4">
            <a href="~/Home/@profile.id"><h3>@profile.Name @profile.LastName</h3></a>
            <span style="color: blue;">#</span><span style="color: grey">@profile.ActivatedDate.Date.ToShortDateString()</span>
        </div>
    </div>
}